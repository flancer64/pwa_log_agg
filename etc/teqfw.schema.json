{
  "package": {
    "app": {
      "entity": {
        "log": {
          "comment": "Logs registry.",
          "attr": {
            "id": {"type": "id"},
            "date": {
              "comment": "Registration date to cleanup expired logs.",
              "type": "datetime",
              "default": "current"
            },
            "meta": {
              "comment": "Metadata for log entry.",
              "type": "json"
            },
            "message": {
              "comment": "Log messages as text.",
              "type": "text"
            }
          },
          "index": {
            "date": {"type": "index", "attrs": ["date"]}
          }
        }
      }
    }
  }
}
